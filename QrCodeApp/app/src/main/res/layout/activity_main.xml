<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="signos.cursoandroid.com.qrcodeapp.MainActivity"
    android:background="#f3a109">

    <Button
        android:id="@+id/botaoId"
        android:layout_width="145dp"
        android:layout_height="71dp"
        android:layout_alignStart="@+id/botaoVerificarId"
        android:layout_alignLeft="@+id/botaoVerificarId"
        android:layout_alignEnd="@+id/botaoVerificarId"
        android:layout_alignRight="@+id/botaoVerificarId"
        android:layout_alignBottom="@+id/botaoVerificarId"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="-109dp"
        android:text="@string/botao_scan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textoResultadoId"
        android:layout_below="@+id/iconeVerdeId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iconeVerdeId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/botaoVerificarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/campoScanerId"
        android:layout_alignLeft="@+id/campoScanerId"
        android:layout_alignTop="@+id/campoScanerId"
        android:layout_alignEnd="@+id/campoScanerId"
        android:layout_alignRight="@+id/campoScanerId"
        android:layout_alignBottom="@+id/campoScanerId"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginBottom="-141dp"
        android:text="@string/botao_verificar" />

    <EditText
        android:id="@+id/campoScanerId"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconeVerdeId"
        android:layout_alignStart="@+id/textoResultadoId"
        android:layout_alignLeft="@+id/textoResultadoId"
        android:layout_alignEnd="@+id/textoResultadoId"
        android:layout_alignRight="@+id/textoResultadoId"
        android:layout_alignBottom="@+id/textoResultadoId"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="-92dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"/>
        //android:maxLines="1"
        //android:imeOptions="actionNext"

</RelativeLayout>
